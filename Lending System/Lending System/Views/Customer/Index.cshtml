@model IEnumerable<Lending_System.Models.tbl_customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutNoScripts.cshtml";
}

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="btn-danger pull-right" style="margin-top:-3px">
                @Html.ActionLink("Add", "AddCustomer", "Customer", null, new { @class = "btn btn-xs ", @style = "font-family: Open Sans; color:#fff", @id = "btnAdd" })
            </div>
            <h3 class="panel-title" style="color:#ffffff"><strong>Customer List</strong></h3>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <div class="col-sm-12">
                    <table id="customer-table" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Customer No.</th>
                                <th>Customer Name</th>
                                <th>Address</th>
                                <th>Credit Limit</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
        var RootUrl = '@Url.Content("~/")';
</script>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/validation")
@Scripts.Render("~/bundles/A-Custom/Tables")
@Scripts.Render("~/Scripts/Datas/customer-js.js")
@Scripts.Render("~/Scripts/Datas/custom-common.js")
